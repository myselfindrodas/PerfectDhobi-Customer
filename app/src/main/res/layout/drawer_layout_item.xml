<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/navextralay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.87"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/navlay"
            android:layout_width="@dimen/_255sdp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_165sdp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_65sdp">

                    <ImageView
                        android:id="@+id/ivImgProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="profile"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo2" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="User name"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="+91 - 9123456789"
                            android:textColor="@color/grey_text2"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Edit Profile"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_8ssp"
                        app:drawableLeftCompat="@drawable/icon_edit" />


                </LinearLayout>



            </LinearLayout>




            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/btnNavhome"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Home"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btnNavaccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/btnExpandaccount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:background="@drawable/right_rounded_blue_bg_btn"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:text="My Account"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_weight="0.2"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />


                            <ImageView
                                android:id="@+id/btnMyaccountExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:layout_gravity="center_vertical"
                                app:tint="@color/white" />


                            <ImageView
                                android:id="@+id/btnMyaccountClose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_minus"
                                app:tint="@color/white" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llmyaccountsubmenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/btnNavprofile"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/btnProfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="My profile"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnNavorders"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_10sdp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="My Orders"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnNavwallet"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_10sdp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="My Wallet"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnNavsaveaddress"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_10sdp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="Saved Address"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnNavcoupons"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_10sdp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:text="My Coupons"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>





                        </LinearLayout>




                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/btnNavRateChart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Rate Chart"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/btnNavreview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Reviews"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/btnNavTranscation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Transcations"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/btnNavEarn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="@string/refer_earn"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnNavsupport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="@string/helps_support"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnNavreturn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Return and Replacement"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnNavnotification"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Notifications"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btnNavfaq"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="FAQs"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnNavlogout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/right_rounded_blue_bg_btn"
                        android:paddingStart="@dimen/_10sdp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Logout"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>







                </LinearLayout>


            </ScrollView>





        </LinearLayout>


    </LinearLayout>

</RelativeLayout>