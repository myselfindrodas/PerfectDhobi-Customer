<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/userImg"
                android:layout_weight="0.5"
                android:src="@drawable/dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Gregory J. Mather"
                        android:textColor="@color/blue"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp" />


                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="24 Mar 2023"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <uz.jamshid.library.ExactRatingBar
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:starCount="5"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:isIndicator="false"
                    app:starFillColor="@color/yellow"
                    app:starSize="20"
                    app:starValue="3.5" />


                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Aut haec tibi, Torquate, sunt vituperanda aut patrocinium tatis repudiandum non possit beatam praestare vitam sapientia."
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Like"
                        android:drawableLeft="@drawable/ic_love"
                        android:drawablePadding="@dimen/_7sdp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10ssp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Reply"
                        android:drawableLeft="@drawable/ic_reply"
                        android:drawablePadding="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_10ssp" />



                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@android:color/darker_gray"/>


    </LinearLayout>

</RelativeLayout>