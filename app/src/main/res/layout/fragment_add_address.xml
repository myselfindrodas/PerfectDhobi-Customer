<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AddAddressFragment">

    <include
        android:id="@+id/topnav"
        layout="@layout/layout_topnav2" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topnav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Add Location"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/llTopLayout"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSearchLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/rounded_white_bg_edit_text"
                android:fontFamily="@font/poppins_bold"
                android:paddingEnd="@dimen/_20sdp"
                android:textAllCaps="false"
                android:drawableTint="@color/teal_700"
                android:drawableEnd="@drawable/ic_search_orange"
                android:text="Enter your location manually"
                android:textColor="@color/grey_light"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey_light"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvHello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="OR"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey_light"
                    android:layout_weight="1"/>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_my_location_orange"
                android:background="@drawable/rounded_white_bg_edit_text"
                android:fontFamily="@font/poppins_bold"
                android:text="Use your current location"
                android:textColor="@color/grey_light"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House No"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/blue"
                    android:id="@+id/etHouseNo"
                    android:backgroundTint="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apartment Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_semibold"
                    android:id="@+id/etApartmentName"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street Details"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/blue"
                android:id="@+id/etStreeDetails"
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area Details"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/blue"
                android:id="@+id/etAreaDetails"
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City / District"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/blue"
                    android:id="@+id/etCity"
                    android:backgroundTint="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pincode"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12ssp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_semibold"
                    android:id="@+id/etPinCode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llenteraddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nick Name this Address as"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_14ssp"
                android:id="@+id/etOtherType"
                android:textColor="@color/blue"
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_35sdp"
            android:background="@drawable/gradientblue"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textColor="@color/white"
            android:id="@+id/btnAddAddress"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvForgetPass" />






    </LinearLayout>


    </ScrollView>

</RelativeLayout>
</layout>