<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradientcolor">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Booked Slot for One Time"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calender"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:tint="@color/border_blue_light"/>

                    <TextView
                        android:id="@+id/tvDeliveryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-04-2023"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"/>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/quantum_grey"
                        android:layout_margin="@dimen/_10sdp"/>


                    <TextView
                        android:id="@+id/tvDeliveryTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/border_blue_light"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgDeliveryboy"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/user"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indranil Sen"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_12ssp"/>



                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On the way"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_9ssp"/>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llcl"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/grey_border_circle2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Call"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10ssp" />



                </LinearLayout>


                <!--            <androidx.appcompat.widget.AppCompatButton-->
                <!--                android:id="@+id/btndeliver"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="@dimen/_25sdp"-->
                <!--                android:background="@drawable/gradientblue"-->
                <!--                android:fontFamily="@font/poppins_medium"-->
                <!--                android:text="Delivered"-->
                <!--                android:layout_marginEnd="@dimen/_15sdp"-->
                <!--                android:backgroundTint="@color/green"-->
                <!--                android:textAllCaps="false"-->
                <!--                android:textSize="@dimen/_7ssp"-->
                <!--                android:textColor="@color/white" />-->




            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>