<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment">

    <include
        android:id="@+id/topnav"
        layout="@layout/layout_topnav2" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topnav"
        android:nestedScrollingEnabled="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="My Profile"/>


        <RelativeLayout
            android:id="@+id/rldp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/ll_nav"
            android:background="@drawable/ic_ellipse"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_190sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgPrf"
                        android:src="@drawable/dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/imgPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    app:cardCornerRadius="@dimen/_30sdp">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cam"/>

                </androidx.cardview.widget.CardView>



            </LinearLayout>



        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name*"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_12ssp"/>


        <EditText
            android:id="@+id/etFirstname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/blue"
            android:text=""
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/poppins_semibold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name*"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"/>



        <EditText
            android:id="@+id/etLastname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/blue"
            android:text=""
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/poppins_semibold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number*"
            android:visibility="gone"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"/>



        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:inputType="number"
            android:text=""
            android:visibility="gone"
            android:maxLength="10"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/blue"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/poppins_semibold"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender*"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"/>


        <Spinner
            android:id="@+id/spGender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:textColor="@color/blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday*"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"/>



        <EditText
            android:id="@+id/etDOB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text=""
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/blue"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/poppins_semibold"/>




        <LinearLayout
            android:id="@+id/llpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password*"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center">


                <TextView
                    android:id="@+id/btnPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/blue"
                    android:text="********"
                    android:textSize="@dimen/_14sdp" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_below="@+id/btnPassword"
                    android:background="@android:color/darker_gray" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/pwdHideBtn"-->
                <!--                    android:layout_width="@dimen/_20sdp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentRight="true"-->
                <!--                    android:layout_centerInParent="true"-->
                <!--                    android:src="@drawable/ic_visibilityoff" />-->



            </RelativeLayout>

        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_75sdp"
            android:background="@drawable/gradientblue"
            android:fontFamily="@font/poppins_medium"
            android:text="UPDATE PROFILE"
            android:textColor="@color/white" />




    </LinearLayout>

    </ScrollView>


</RelativeLayout>
</layout>